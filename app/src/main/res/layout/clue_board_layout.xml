<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clue_board_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/characterRedButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F44336"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/characterBlueButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#4CAF50"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/characterGreenButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#03A9F4"
                        android:textOff=" "
                        android:textOn=" " />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/characterYellowButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFEB3B"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/characterOrangeButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FF9800"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/characterPinkButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#E91E63"
                        android:textOff=" "
                        android:textOn=" " />
                </TableRow>

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/knifeButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/knife"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/revolverButon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/revolver"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/candlestickButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/candlestick"
                        android:textOff=" "
                        android:textOn=" " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/ropeButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rope"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/leadpipeButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/leadpipe"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/wrenchButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/wrench"
                        android:textOff=" "
                        android:textOn=" " />
                </TableRow>

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/diningButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/diningroom"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/hallButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/hall"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/kitchenButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kitchen"
                        android:textOff=" "
                        android:textOn=" " />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/ballroomButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ballroom"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/billardButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/billard"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/conservButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/conservatory"
                        android:textOff=" "
                        android:textOn=" " />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ToggleButton
                        android:id="@+id/libraryButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/library"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/loungeButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/lounge"
                        android:textOff=" "
                        android:textOn=" " />

                    <ToggleButton
                        android:id="@+id/studyButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/study"
                        android:textOff=" "
                        android:textOn=" " />

                </TableRow>

            </TableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />

            <Button
                android:id="@+id/moveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A5D6A7"
                android:text="Move" />

            <Button
                android:id="@+id/suggestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFAB91"
                android:text="Suggest" />

            <Button
                android:id="@+id/acuseButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EF9A9A"
                android:text="Accuse" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>